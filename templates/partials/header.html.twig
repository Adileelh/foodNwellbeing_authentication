					<li>
						<a href="javascript:void(0);" class="nav-link search_trigger">
							<i class="linearicons-magnifier"></i>
						</a>
						<div class="search_wrap">
							<span class="close-search">
								<i class="ion-ios-close-empty"></i>
							</span>
							<form>
								<input type="text" placeholder="Search" class="form-control" id="search_input">
								<button type="submit" class="search_icon">
									<i class="ion-ios-search-strong"></i>
								</button>
							</form>
						</div>
						<div class="search_overlay"></div>
					</li>
					<li class="dropdown cart_dropdown">
						<a href="#" data-toggle="dropdown"></a>

						<a class="nav-link cart_trigger" href=" {{ path('app_cart')}}">

							<i class="linearicons-cart"></i>

							<span class="cart_count">
								{% if app.session.get('cart') %}
									{{app.session.get('cartData').data.cart_quantity}}
									{% else %}

								{% endif %}
							</span>
						</a>


						<div class="cart_box dropdown-menu dropdown-menu-right">
							<ul class="cart_list">
								{% if app.session.get('cart') %}

									{# products qui provient du premier tableau dans $fullcart #}
									{% for element in app.session.get('cartData').products %}

										<li>
											<a href="{{ path('app_cart_deleteAllQuantityFromCart', {'id' : element.product.id})}}" class="item_remove">

												<i class="ion-close"></i>
											</a>
											<a href="#"><img src="/assets/uploads/products/{{element.product.image}}" alt="{{element.product.name}}">{{element.product.name}}</a>


											<span class="cart_quantity">
												{{element.quantity}}
												x
												<span class="cart_amount">
													<span class="price_symbole">€</span>
												</span>
												{{element.product.price / 100}}</span>

										</li>

									{% endfor %}
									<div class="cart_footer">
										<p class="cart_total">
											<strong>Total TTC:</strong>
											<span class="cart_price">
												<span class="price_symbole">€</span>
											</span>
											{{app.session.get('cartData').data.subTotalTTC}}</p>


										<p class="cart_buttons">
											<a href="{{path('app_cart')}}" class="btn btn-fill-line rounded-0 view-cart">View Cart</a>
											<a href="{{ path('app_checkout')}}" class="btn btn-fill-out rounded-0 checkout">Checkout</a>


										</p>
									</div>

								</ul>

							{% else %}
								<li>Votre panier est vide</li>
							</ul>
						{% endif %}
					</li>
				</div>

			</ul>
