{% extends 'base.html.twig' %}

{% block title %}Address index
{% endblock %}

{% block body %}
	<h1>Address index</h1>

	<table class="table">
		<thead>
			<tr>

				<th>Nom complet</th>
				<th>Compagnie</th>
				<th>Adresse</th>
				<th>Complément d'adresse</th>
				<th>Téléphone</th>
				<th>Ville</th>
				<th>Code postale</th>
				<th>Pays</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for address in addresses %}
				<tr>
					<td>{{ address.id }}</td>
					<td>{{ address.fullname }}</td>
					<td>{{ address.company }}</td>
					<td>{{ address.address }}</td>
					<td>{{ address.complement }}</td>
					<td>{{ address.phone }}</td>
					<td>{{ address.city }}</td>
					<td>{{ address.postalCode }}</td>
					<td>{{ address.country }}</td>
					<td>
						<a href="{{ path('app_address_show', {'id': address.id}) }}">Voir</a>
						<a href="{{ path('app_address_edit', {'id': address.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">Aucune données</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_address_new') }}">Créer nouvelle adresse</a>
{% endblock %}
